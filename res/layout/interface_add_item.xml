<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:fitsSystemWindows="true"
    >

 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <Button
            android:id="@+id/interface_add_item_button_back"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/blue_button_theme"
            android:text="@string/interface_button_bcak"
            android:textColor="@color/white" 
            android:textSize="26sp"
                        style="?android:attr/borderlessButtonStyle"
            
            />
   <TextView
       android:id="@+id/interface_add_item_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="@color/blue500"
        android:layout_weight="8"
        android:gravity="center"
        android:textColor="@color/white" />
        <Button
            android:id="@+id/interface_add_item_button_add"
            android:text="@string/interface_button_add"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/blue_button_theme"
            android:textColor="@color/white" 
            android:textSize="26sp"
                        style="?android:attr/borderlessButtonStyle"
            
            />
    </LinearLayout>

    <GridView
        android:id="@+id/interface_add_item_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3" 
        >
    </GridView>

</LinearLayout>
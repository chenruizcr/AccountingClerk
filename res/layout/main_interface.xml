<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <Button
            android:id="@+id/interface_button_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/blue_button_theme"
            android:text="@string/interface_button_bcak"
            android:textColor="@color/white" 
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:id="@+id/interface_textview_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue500"
            android:gravity="center_vertical|center_horizontal"
            android:text="TextView"
            android:textColor="@color/white" 
            android:maxEms="11"
            />

        <Button
            android:id="@+id/interface_button_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/blue_button_theme"
            android:text="@string/interface_button_add"
            android:textColor="@color/white" 
                        style="?android:attr/borderlessButtonStyle"
            
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/interface_textview_showincome"
			 android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/blue200_button_dw"
            android:gravity="center_vertical|center_horizontal"
            android:text="TextView"
            android:textColor="@color/white" 
            android:textSize="15sp"
            android:maxEms="11"
            />

        <Button
            android:id="@+id/interface_button_Monthly_budget"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/blue200_button_dw"
            android:text="button"
            android:textColor="@color/white" 
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:maxEms="11"
                        style="?android:attr/borderlessButtonStyle"
            
            />

        

        <TextView
            android:id="@+id/interface_textview_Total_spending"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/blue200_button_dw"
            android:gravity="center_vertical|center_horizontal"
            android:text="TextView"
            android:textColor="@color/white" 
            android:textSize="15sp"
            android:maxEms="11"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/interface_listview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>
    </LinearLayout>

</LinearLayout>